<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="iskazivanje_interesovanja_za_vakcinaciju">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="pacijent"/>
        <xs:element ref="zeljena_opstina_vakcinacije"/>
        <xs:element ref="odabir_vakcina"/>
      </xs:sequence>
      <xs:attribute name="datum" use="required" type="xs:date"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="pacijent">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="drzavljanstvo"/>
        <xs:element ref="jmbg"/>
        <xs:element ref="puno_ime"/>
        <xs:element ref="kontakt_informacije"/>
        <xs:element ref="dobrovoljni_davalac_krvi"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="drzavljanstvo" type="xs:string"/>
  <xs:element name="jmbg">
    <xs:simpleType>
      <xs:restriction base="xs:positiveInteger">
        <xs:pattern value="[0-9]{13}"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
  <xs:element name="puno_ime">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="licno_ime"/>
        <xs:element ref="prezime"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="licno_ime" type="xs:string"/>
  <xs:element name="prezime" type="xs:string"/>
  <xs:element name="kontakt_informacije">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="email_adresa"/>
        <xs:element ref="fiksni_telefon"/>
        <xs:element ref="mobilni_telefon"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="email_adresa">
    <xs:simpleType>
      <xs:restriction base="xs:string">
        <xs:pattern value="[^@]+@[^\.]+\..+"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
  <xs:element name="fiksni_telefon">
    <xs:simpleType>
      <xs:restriction base="xs:positiveInteger">
        <xs:pattern value="[0-9]{9,10}"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
  <xs:element name="mobilni_telefon">
    <xs:simpleType>
      <xs:restriction base="xs:positiveInteger">
        <xs:pattern value="[0-9]{9,11}"/>
      </xs:restriction>
    </xs:simpleType>
  </xs:element>
  <xs:element name="zeljena_opstina_vakcinacije" type="xs:string"/>
  <xs:element name="odabir_vakcina">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="opcija"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="opcija" type="xs:string"/>
  <xs:element name="dobrovoljni_davalac_krvi" type="xs:boolean"/>
</xs:schema>
